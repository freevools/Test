
public class BinarySearch {
    public static void main(String[] args) {

        int[] array = new int[]{1,3,5,6,7,8,14,144,343,564};


        BinarySearch binarySearch = new BinarySearch();
        System.out.println(binarySearch.searchNumber(array, 56, 0, array.length - 1));

    }

    public int searchNumber(int[] array, int number, int min, int max){

        if (max == min){
            if (number == array[min]){
                return min;
            }else {
                return - 1;
            }
        }

        int middleIndex = (min + max) / 2;

        if (array[middleIndex] < number) {
            return searchNumber(array, number, middleIndex + 1, max);
        }else if (array[middleIndex] > number){
           return searchNumber(array, number, min, middleIndex - 1);
        }
        return middleIndex;
    }
}
